!!!
%html
  %head
    %title Web App
    = stylesheet_link_tag "reset", "web-app-theme/base", "web-app-theme/themes/warehouse/style", "web-app-theme/override", "style"
    = javascript_include_tag 'jquery-1.6.2.min', 'jquery-ui-1.8.14.custom.min', 'jquery.ui.datepicker-ru'
    = javascript_include_tag 'rails' 
    = stylesheet_link_tag 'smoothness/jquery-ui-1.8.14.custom'
    = csrf_meta_tag
  %body
    #container
      #header
        %h1
          %a{:href => "/"} Car tracker 
        #user-navigation
          %ul.wat-cf
            %li
              - if current_user
                %a.logout{:href => "/logout"}= t("web-app-theme.logout", :default => "Logout")
              - else
                %a.login{:href => "/login"}= t("web-app-theme.login", :default => "Login")
        #main-navigation
          %ul.wat-cf
            %li<= link_to 'Машины', vehicles_path
            %li<= link_to 'Персонал', people_path
            %li<= link_to 'Смены', shifts_path
      #wrapper.wat-cf
        .flash
          - flash.each do |type, message|
            %div{:class => "message #{type}"}
              %p= message
        #main
          = yield
